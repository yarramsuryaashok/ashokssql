SELECT * FROM books
WHERE book_title LIKE 'L%';

UPDATE Books
SET price = "4500";
select*from Books;

DELETE from Books
WHERE s_no= 4;
select*from Books;


SELECT * FROM Books;
SELECT * FROM authors;

SELECT s_no,book_title,author_name,genre,publication,price
FROM Books
INNER JOIN authors
ON Books.author_name=authors.author_name
ORDER BY s_no;        

